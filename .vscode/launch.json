{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py",
            "justMyCode": false
        },
        {
            "name": "Run Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/celery",
            "args": [
                "-A",
                "core",
                "worker",
                "-l",
                "INFO",
            ],
            "justMyCode": false
        }
    ],
    "compounds": []
}